@page "/login"

<div class="container mt-5">
    <h2 class="text-center">Login</h2>

    <EditForm Model="@user" OnValidSubmit="HandleLogin" FormName="Login">
        <DataAnnotationsValidator />
        <div class="mb-3">
            <label for="username" class="form-label">Username</label>
            <InputText id="username" class="form-control" @bind-Value="username" />
        </div>
        <div class="mb-3">
            <label for="password" class="form-label">Password</label>
            <InputText id="password" class="form-control" @bind-Value="password" Type="password" />
        </div>
        <div class="text-center">
            <button type="submit" class="btn btn-primary">Login</button>
            <button type="button" class="btn btn-secondary" @onclick="LoginAsGuest">Login as Guest</button>
        </div>
    </EditForm>
</div>